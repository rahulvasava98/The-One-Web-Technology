@model The_One_Web_Technology.Models.contactModel
@{
	ViewData["Title"] = "inquiry";
	Layout = "~/Views/Shared/_Global_Layout.cshtml";
}
@section header {
	<title>Inquiry From | The One Web Technology  </title>
}
@section meta {

	<meta property="og:image:height" content="150">
	<meta property="og:image:width" content="150">
	<meta property="og:content" content="Inquiry" />
	<meta property="og:title" content="Inquiry form  | The One Web Technology " />
	<meta property="og:description" content="Our Offices Around The World" />
	<meta property="og:image" itemprop="image" content="https://dummyimage.com/600x400/000/fff" />

}


@* inquiry form  *@

<section class="contact-us-form-section  mega-section my-5">
	<div class="container my-5">
	<div class="row">
		<div class="col-12 ">
			<div class="contact-form-panel">
				<div class="sec-heading centered    ">
					<div class="content-area">
						<h2 class=" title    wow fadeInUp" data-wow-delay=".4s">Contact Us</h2>
					</div>
				</div>
				<div class="contact-form-inputs wow fadeInUp" data-wow-delay=".6s">
					<div class="custom-form-area input-boxed">
						<!--Form To have user messages-->
							<form class="main-form" asp-action="inquiryform">
							<span class="done-msg"></span>
							<div class="row ">
								@* name start *@
								<div class="col-12 col-lg-6">
									<div class="input-wrapper">
										<input class="text-input" type="text" asp-for="Fname" />
										<label class="input-label" > First name <span class="req">*</span></label>
										<span class="b-border"></span><span class="error-msg"></span>
									</div>
								</div>
								
								<div class="col-12 col-lg-6">
									<div class="   input-wrapper">
										<input class="text-input" type="text" asp-for="Lname" />
										<label class="input-label">Last name <span class="req">*</span></label><span class="b-border"></span><span class="error-msg"></span>
									</div>
								</div>
								@* name end *@
								
								@* contact start  *@
								<div class="col-12">
									<div class="   input-wrapper">
										<input class="text-input" type="email" asp-for="email" />
										<label class="input-label" > Email <span class="req">*</span></label>
										<span class="b-border"></span><span class="error-msg"></span>
									</div>
								</div>
									@* contact  end  *@

									@* services dropdown start*@
								<div class="col-12">
										<div class="form-group input-wrapper">
											<label class="input-label" for="msg-subject"> Select Services <span class="req">*</span></label>
											<select class="form-control" asp-for="subject">
											<option>select</option>
											<option>Web Devlopment</option>
											<option>Digital Marketing</option>
											<option>Software Development</option>
									 		<option>SEO services</option>
											<option>Bussiness Consulting</option>
											<option>web domain and hosting</option>
											<option>embedded system</option>
											<option>bulk emials and message</option>
										</select>
										</div>
								</div>
									@* services dropdown end*@

									
								<div class="col-12 ">
									<div class="   input-wrapper">
										<textarea class=" text-input" asp-for="message"></textarea>
											<label class="input-label"> your requirement <span class="req">*</span></label>
											<span class="b-border"></span><i></i><span class="error-msg"></span>
									</div>
								</div>
								<div class="col-12 submit-wrapper">
									<button class=" btn-solid" type="submit">Send your message</button>
								</div>
								

							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
</section>


