
@{
    ViewData["Title"] = "Brand360";
}
@section style{
    <style>
        .mt-3rem {
            margin-top: 6rem;
        }
    
        .swiper {
             width: 100%; 
            height: 300px;
        }

        .swiper-slide {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            background: #ddd;
        }

    </style>    
}

<section class="brandThree mt-3rem">
    <div class="container">        
        <div class="brand-review-section_wrapper p-5">
            <div class="brand-review-section">
                <div class="row">
                    <div class="col-5">
                        <div class="brand-review-section_item">
                            <div class="text-area">
                                <h5 class="color-primary mb-16">Testimonials</h5>
                                <h3 class="h1 bold lightest-black">What our clients think about us?</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="brand-review-section_item">
                            <div class="brande-review-block_wrapper">
                                <div class="brande-review-block">
                                    <div class="border border-primary rounded">
                                        <div class="swiper mySwiper">
                                            <div class="swiper-wrapper">
                                                <div class="swiper-slide">Slide 1</div>
                                                <div class="swiper-slide">Slide 2</div>
                                                <div class="swiper-slide">Slide 3</div>
                                            </div>

                                            <!-- Optional navigation buttons -->
                                            <div class="swiper-button-next"></div>
                                            <div class="swiper-button-prev"></div>

                                            <!-- Optional pagination -->
                                            <div class="swiper-pagination"></div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var swiper = new Swiper(".mySwiper", {
            loop: true,
            autoplay: {
                delay: 2000,
                disableOnInteraction: false,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    });

</script>