@model The_One_Web_Technology.Models.trainingloginModel
@{
    ViewData["Title"] = "forgettrainingPassword";
}

<section class="login_section my-5">
    <div class="container py-5">
        <div class="row py-5">
            <div class="col-12">
                <div class="contact-form-panel">
                    <div class="sec-heading centered">
                        <div class="content-area">
                            <h2 class=" title    wow fadeInUp" data-wow-delay=".4s">
                                Forgot your password
                            </h2>
                        </div>
                    </div>
                    <div class="contact-form-inputs wow fadeInUp" data-wow-delay=".6s">
                        <div class="custom-form-area input-boxed">
                            <!--Form To have user messages-->
                            <div class="row">
                                <div class="col-6 m-auto">
                                    <form class="main-form" asp-action="forgettrainingPassword">
                                        <span class="done-msg"></span>
                                        <div class="row ">
                                            @* email    *@
                                            <div class="col-12">
                                                <div class="   input-wrapper">
                                                    <input class="text-input" type="email" asp-for="Email"/>
                                                    <label class="input-label"> E-mail <span class="req">*</span>
                                                        <span class="text-danger" asp-validation-for="Email">

                                                        </span>    
                                                    </label>
                                                    <span class="b-border"></span><span class="error-msg"></span>
                                                </div>
                                            </div>
                                            @* contact  end  *@
                                            <div class="col-12">
                                                <div class="   input-wrapper">
                                                    <input class="text-input" type="password" asp-for="trainingRegistrationPassword" />
                                                    <label class="input-label"> Password <span class="req">*</span>
                                                      <span class="text-danger" asp-validation-for="trainingRegistrationPassword">

                                                      </span>  
                                                    </label>
                                                    <span class="b-border"></span><span class="error-msg"></span>                                                    
                                                </div>
                                                <div class="   input-wrapper">
                                                    <input class="text-input" type="password" asp-for="ConfirmPassword"/>
                                                    <label class="input-label">Confirm Password <span class="req">*</span>
                                                       <span asp-validation-for="ConfirmPassword"></span>
                                                    </label>
                                                    <span class="b-border"></span><span class="error-msg"></span>                                                    
                                                </div>
                                            </div>
                                            <div class="col-12 submit-wrapper">
                                                <button class=" btn-solid" type="submit">Login</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

